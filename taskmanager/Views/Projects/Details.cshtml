@model taskmanager.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<h2>Project Details</h2>

<div>
    <h4>Project Information</h4>
    <dl class="dl-horizontal">
        <dt>Project Name:</dt>
        <dd>@Model.ProjectName</dd>

        <dt>Description:</dt>
        <dd>@Model.Description</dd>

        <dt>Start Date:</dt>
        <dd>@Model.StartDate.ToShortDateString()</dd>

        <dt>End Date:</dt>
        <dd>@(Model.EndDate?.ToShortDateString() ?? "N/A")</dd>

        <dt>Created By:</dt>
        <dd>@Model.CreatedByUser?.UserName"</dd>
    </dl>
</div>

<a href="@Url.Action("Index", "Projects")" class="btn btn-secondary">Back to List</a>
<a href="@Url.Action("Edit", "Projects", new { id = Model.ProjectID })" class="btn btn-primary">Edit</a>
<a href="@Url.Action("Delete", "Projects", new { id = Model.ProjectID })" class="btn btn-danger">Delete</a>
